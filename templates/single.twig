{% extends "base.twig" %}

{% block content %}

	<article id="post-{{ post.ID }}" class="{{ post_categories }}">

		<section
			class="section-hero-top"
			style="background-image: url('{{ background_image ? background_image : post.thumbnail.src }}')"
		>
			<div class="section-hero-shade"></div>
			<div class="ct-container">
				<div class="top-bar">
					<a href="{{ latest_link }}" class="back-button">
						<span class="icon-chevron-left"></span>
						<p>返回上一頁</p>
					</a>
					<!-- <a href="" class="button light">按照主題</a> -->
				</div>
			</div>
		</section>

		<section class="section-post-content generic-content ct-container">
			<div class="title-box">
				<div class="top">
					<div class="left">
						<p>專題報導</p>
						<!-- TODO: agganciare issue name -->
						<p class="issue forests">森林</p>
					</div>
					<div class="right">
						<span class="icon-clock"></span>
						<p>{{ reading_time }} 閱讀</p>
						<p><time class="single-post-time" pubdate>{{ post.post_date|date }}</time></p>
					</div>
				</div>

				<h1>{{ post.title|raw }}</h1>
				<div class="bottom">
					<p>作者：{{ post.author.name }}</p>
				</div>
			</div>

			{{ post.content|e('wp_kses_post')|raw }}			

		</section>


	</article>


	<section class="section-latest-news">
		<div class="ct-container">
			<h2>最新消息</h2>
			<div class="list">
				{% if ( related_posts ) %}
					{% for related_post in related_posts %}
						{% include "blocks/tease-related-post.twig" with {post:related_post} %}						
					{% endfor %}
				{% endif %}
			</div>
		</div>
	</section>

{% endblock %}
