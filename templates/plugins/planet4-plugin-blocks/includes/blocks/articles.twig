{% block articles %}
    {% if ( recent_posts ) %}
	<section class="section-latest-news white">
	    {{ fn( 'wp_nonce_field', nonce_action, '_wpnonce', true, false )|raw }}
	    <div class="ct-container generic-content">
		{% if ( fields.article_heading ) %}
		    <h1>{{ fields.article_heading }}</h1>
		{% endif %}
		<div class="top-bar mb">
		    {% if ( fields.articles_description ) %}
			<h2 class="large">{{ fields.articles_description|e('wp_kses_post')|raw }}</h2>
		    {% endif %}
		    <span class="icon-chevron-right"></span>
		</div>
	    </div>
	    <div class="ct-container">
		<div class="tags">
		    <a href="" class="tag">TODO 污染</a>
		</div>
		<div class="list">
		    {% for recent_post in recent_posts %}
			<a class="post" href="">
			    <div class="info-box">
				<div class="top">
				    {% if (recent_post.tags) %}
					<div class="tag-wrap tags">
					    {% for tag in recent_post.tags %}
						<div class="tag">{{ tag.name|e('wp_kses_post')|raw }}</div>
					    {% endfor %}
					</div>
				    {% endif %}
				    <p class="type">TODO 成就</p>
				</div>
				<div class="name">
				    {{ recent_post.post_title }}
				    <!-- - TODO or recent_post.post_excerpt? -->
				</div>
				<div class="bottom">
				    <div class="time">
					<span class="icon-clock"></span>
					<p>TODO 4 min 閱讀</p>
				    </div>
				    <div class="number">TODO 00.00.0000</div>
				</div>
			    </div>
			    <div
				class="thumbnail lazy"
				data-bg="url({{ fn('get_the_post_thumbnail_url', recent_post.ID, 'articles-medium-large' ) }})"
			    ></div>
			</a>
		    {% endfor %}
		</div>
		{% if ( total_pages > 1 and fields.read_more_link) %}
		    <a href="{{ fields.read_more_link }}" class="more">{{ fields.read_more_text }}</a>
		{% endif %}
	    </div>
	</section>
    {% endif %}
{% endblock %}
