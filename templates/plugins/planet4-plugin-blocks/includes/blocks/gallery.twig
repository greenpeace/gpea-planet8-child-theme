{% block gallery %}
    {% if ( images ) %}

	<section class="section-stats">
	    <div class="boxes">
		<div class="box bg-blue">
		    <p class="title">{{ title }}</p>
		    <p class="small">{{ description|e('wp_kses_post')|raw }}</p>
		</div>
		<div class="box fit">
		    <div class="swiper-container section-stats-swiper">
			<div class="swiper-wrapper">
			    {% if images|length > 1 %}
				{% for key,single_image in images %}
				    <div class="swiper-slide image lazy" data-bg="url({{ single_image.image_src }})"></div>
				{% endfor %}
			    {% endif %}					
			</div>
			<div class="swiper-pagination"></div>
		    </div>
		</div>
	    </div>
	</section>

    {% endif %}
{% endblock %}
